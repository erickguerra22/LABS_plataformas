<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/root_detailsActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/txt_detailsActivity_restaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/med_distance_2"
        android:layout_marginTop="@dimen/max_distance"
        android:textSize="@dimen/title_2"
        tools:text="Clínica Dr Shan"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/txt_detailsActivity_restaurantAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_detailsActivity_restaurantName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/med_distance_2"
        android:textSize="@dimen/subtitle_2"
        tools:text="11 Calle 'A', 11-44 Zona 5"
        android:textColor="@color/Grey"
        android:layout_marginTop="@dimen/min_distance"
        />
    <Button
        android:id="@+id/btn_detailsActivity_iniciarVisita"
        android:layout_width="0dp"
        android:layout_height="@dimen/max_distance_2"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/txt_detailsActivity_restaurantAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/med_distance_2"
        android:layout_marginEnd="@dimen/med_distance_2"
        android:text="Iniciar Visita"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/med_distance"
        />
    <ImageView
        android:id="@+id/img_square"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/btn_detailsActivity_iniciarVisita"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/light_grey"
        android:layout_marginTop="@dimen/med_distance_2"
        />
    <TextView
        android:id="@+id/txt_detailsActivity_aditionalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_square"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/med_distance_3"
        android:layout_marginStart="@dimen/med_distance_2"
        android:text="Información adicional"
        android:textStyle="bold"
        android:textSize="@dimen/subtitle_2"
        android:layout_marginBottom="@dimen/med_distance_2"
        android:textColor="@color/dark_grey"
        />
    <ImageView
        android:id="@+id/ic_detailsActivity_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_detailsActivity_aditionalInfo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/med_distance_2"
        android:layout_marginTop="@dimen/med_distance_2"
        android:src="@drawable/ic_schedule"
        />
    <ImageView
        android:id="@+id/ic_detailsActivity_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ic_detailsActivity_schedule"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/med_distance_2"
        android:layout_marginTop="@dimen/med_distance"
        android:src="@drawable/ic_phone"
        />
    <TextView
        android:id="@+id/txt_scheduleHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_detailsActivity_aditionalInfo"
        app:layout_constraintStart_toEndOf="@id/ic_detailsActivity_schedule"
        android:layout_marginTop="@dimen/intermediate_distance"
        android:layout_marginStart="@dimen/min_distance_2"
        android:text="Horario de atención"
        android:textSize="@dimen/text_1"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txt_detailsActivity_restaurantSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="08:00AM - 05:00PM"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/txt_scheduleHeader"
        android:textSize="@dimen/text_1"
        app:layout_constraintStart_toEndOf="@id/ic_detailsActivity_schedule"
        android:layout_marginStart="@dimen/min_distance_2"
        />
    <TextView
        android:id="@+id/txt_phoneHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_detailsActivity_restaurantSchedule"
        app:layout_constraintStart_toEndOf="@id/ic_detailsActivity_phone"
        android:layout_marginTop="@dimen/min_distance_3"
        android:layout_marginStart="@dimen/min_distance_2"
        android:text="Teléfono"
        android:textSize="@dimen/text_1"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txt_detailsActivity_restaurantPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7838 - 9900"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/txt_phoneHeader"
        android:textSize="@dimen/text_1"
        app:layout_constraintStart_toEndOf="@id/ic_detailsActivity_schedule"
        android:layout_marginStart="@dimen/min_distance_2"
        />
    <Button
        android:id="@+id/btn_detailsActivity_Call"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_detailsActivity_restaurantSchedule"
        android:padding="0dp"
        android:text="Llamar"
        android:layout_marginEnd="@dimen/min_distance_2"
        android:textAllCaps="false"
        android:textColor="@color/blue" />

</androidx.constraintlayout.widget.ConstraintLayout>